<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#f3ae1b"></solid>
            <stroke android:width="2dp" android:color="#ede7f6"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="#bb6008" android:startColor="#f3ae1b" android:angle="270"/>
            <stoke android:width="1dp" android:color="#000" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
</selector>